<Window x:Class="JLWPF.MVVM.Views.CloseAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JLWPF.MVVM.Views"
        mc:Ignorable="d"
        Title="Confirm Exit" Height="150" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Are you sure you want to exit?" Margin="10" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Name="btnYes" Content="Yes" Width="75" Margin="5" Click="btnYes_Click"/>
                <Button Name="btnNo" Content="No" Width="75" Margin="5" Click="btnNo_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
